<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    底部菜单项 布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:bl_corners_radius="16dp"
        app:bl_solid_color="@color/gray">

        <TextView
            android:id="@+id/share_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/weixin"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qq"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/collect"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/share"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/black"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>